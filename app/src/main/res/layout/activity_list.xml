<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ListActivity">

    <LinearLayout
        android:id="@+id/linearLayoutAs"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="#C2FFC4"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/panahKiridetail1"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:onClick="panahKiridetail1"
            android:src="@drawable/ic_panah_kiri" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Daftar Laporan"
            android:textAlignment="center"
            android:layout_marginLeft="60dp"
            android:layout_gravity="center"
            android:textSize="23dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
    </LinearLayout>

    <ListView
        android:id="@+id/listlaporan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp">

    </ListView>

</LinearLayout>